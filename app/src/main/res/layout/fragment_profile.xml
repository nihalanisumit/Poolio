<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_app" />

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profile_pic"
            />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:paddingBottom="24dp">




            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text=" Name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Gender"
                android:textColor="#fff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/edit_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/editprofile"
                android:scaleType="fitCenter"
            />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="#fff">
                <android.support.design.widget.TextInputEditText
                android:id="@+id/mobileTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Mobile"
                      android:enabled="false"
                android:textColor="#000"
                      android:background="@null"
                android:padding="20dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="#fff">
                <android.support.design.widget.TextInputEditText
                          android:id="@+id/email"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:padding="20dp"
                          android:enabled="false"
                          android:hint="email id"
                          android:text="E-mail"
                          android:background="@null"
                          android:textColor="#000"
                        />
                <ImageView
                    android:id="@+id/emailplus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:src="@drawable/plus_icon"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="#fff">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/v_name"
                    android:hint="vehicle name"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:enabled="false"
                          android:padding="20dp"
                          android:text="vehcile name"
                          android:textColor="#000"
                          android:background="@null"/>
                <ImageView
                    android:id="@+id/vnplus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:src="@drawable/plus_icon"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="#fff">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/v_no"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:padding="20dp"
                    android:hint="vehicle number"
                          android:enabled="false"
                          android:text="Vehicle number"
                          android:background="@null"
                          android:textColor="#000"/>
                <ImageView
                    android:id="@+id/vnoplus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:src="@drawable/plus_icon"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="#fff">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/dl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:hint="driving license"
                    android:enabled="false"
                    android:padding="20dp"
                    android:text="DL"
                    android:textColor="#000"
                    android:background="@null"
                    />
                <ImageView
                    android:id="@+id/dlplus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:src="@drawable/plus_icon"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    />
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_button"
                android:background="@color/colorPrimary"
                android:elevation="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:text="Add"/>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
